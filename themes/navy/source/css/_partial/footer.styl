#footer
  clearfix()
  padding: 40px 0
  color: rgba(255, 255, 255, 0.6)
  font-family: font-title
  position: relative
  background: color-navy
  text-align: center
  @media mq-normal
    text-align: left
  @media print
    display: none
  a
    color: inherit
    text-decoration: none
    transition: 0.2s
    &:hover
      color: #fff

#footer-copyright
  float: left
  width: 33.333%
  text-align: left
  @media mq-normal
    float: left
  a
    font-weight: bold

#footer-sponsors
  float: left
  width: 33.333%
  text-align: center
  @media mq-normal
    float: left
  a
    font-weight: bold

#footer-links
  float: left
  width: 33.333%
  text-align: right
  @media mq-normal
    float: left
    width: 33.333%
    text-align: right

.footer-link
  font-size: 30px
  margin-left: 20px
  &:first-child
    margin-left: 0